<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Appenders>
		<Console name="CONSOLE" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{ISO8601} %p [%X{JASPER_REPORT_RUN_KEY}] [%t] %c{1}.%M(%L) | %m%n" />
		</Console>

		<RollingRandomAccessFile name="FILE"
			fileName="./logs/portiss-web-server.log" filePattern="./logs/portiss-web-server-%d{yyyy-MM-dd-HH}-%i.log.gz"
			immediateFlush="false" append="true">
			<PatternLayout>
				<pattern>%d{ISO8601} %p [%X{JASPER_REPORT_RUN_KEY}] [%t] %c{1}.%M(%L) | %m%n</pattern>
				<charset>utf-8</charset>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy/>
        		<SizeBasedTriggeringPolicy size="10 MB"/>
			</Policies>
			<DefaultRolloverStrategy max="20"/>
		</RollingRandomAccessFile>
	</Appenders>

	<Loggers>
		<asyncRoot level="debug" includeLocation="true">
			<AppenderRef ref="CONSOLE" />
			<AppenderRef ref="FILE" />
		</asyncRoot>

		<AsyncLogger name="org.springframework" level="INFO"/>

		<AsyncLogger name="org.eclipse.jetty" level="INFO" />

		<!-- uncomment the below lines to suppress some logs, enable others -->
		<!-- 
		<AsyncLogger name="com.imsi" level="WARN"/> 
		<AsyncLogger name="com.imsi.iss.portiss.formatter.controls.SpringExpressionFieldResolver" level="TRACE"/> 
		-->
	</Loggers>

</Configuration>